<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <texture texture="affinity:textures/gui/assembly_augment.png" region-width="176" region-height="166"/>

                        <label>
                            <text translate="true">gui.affinity.augmented_crafting_table.title</text>
                            <color>#404040</color>
                            <positioning type="relative">50,3</positioning>
                        </label>

                        <affinity.alpha-wrapper id="progress-alpha">
                            <texture texture="affinity:textures/gui/assembly_augment.png" region-width="4" region-height="33" u="176" v="46"
                                     id="treetap-overlay">
                            </texture>
                            <positioning type="absolute">157,27</positioning>
                        </affinity.alpha-wrapper>

                        <texture texture="affinity:textures/gui/assembly_augment.png" region-width="30" region-height="30" u="176" id="crafting-overlay">
                            <positioning type="absolute">117,28</positioning>
                            <blend>true</blend>
                            <visible-area>
                                <height>0</height>
                            </visible-area>
                        </texture>

                        <texture texture="affinity:textures/gui/assembly_augment.png" region-width="22" region-height="16" u="176" v="30"
                                 id="progress-indicator">
                            <positioning type="absolute">90,34</positioning>
                            <visible-area>
                                <width>0</width>
                            </visible-area>
                        </texture>

                    </children>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>