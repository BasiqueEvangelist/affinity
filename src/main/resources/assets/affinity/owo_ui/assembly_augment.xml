<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <texture texture="affinity:textures/gui/assembly_augment.png" region-width="176" region-height="166"/>

                        <label>
                            <text translate="true">gui.affinity.augmented_crafting_table.title</text>
                            <color>#404040</color>
                            <positioning type="relative">50,3</positioning>
                        </label>

                        <label id="treetap-count">
                            <positioning type="absolute">108,62</positioning>
                            <color>dark-gray</color>
                        </label>

                        <texture texture="affinity:textures/gui/assembly_augment.png" region-height="30" region-width="30" u="176" id="crafting-overlay">
                            <positioning type="absolute">117,28</positioning>
                            <blend>true</blend>
                            <visible-area>
                                <height>0</height>
                            </visible-area>
                        </texture>

                        <texture texture="affinity:textures/gui/assembly_augment.png" region-width="22" region-height="16" u="176" v="30" id="progress-indicator">
                            <positioning type="absolute">90,35</positioning>
                            <visible-area>
                                <width>0</width>
                            </visible-area>
                        </texture>
                    </children>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>